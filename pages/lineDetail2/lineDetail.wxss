/* pages/signIn/signIn.wxss */
.page__bd{
  width: 100vw;
  background-image: url('https://6465-dev-sgb12-1256211978.tcb.qcloud.la/show/bg.png?sign=2c7274f9337cdd179a8b9911d05b9e53&t=1644748597');
  background-size: 100% 100%;
  padding-bottom: 40px;
}
.to-online {
  padding: 20px;
  position: fixed;
  z-index: 99;
}
.text {
  padding: 20px;
  color: #756448;
  font-size: 28rpx;
  line-height: 56rpx;
}
.to-online image{
  width: 70px;
  height: 30px;
}
.img-div {
  width: 100vw;
  padding: 20px 20px 0;
  box-sizing: border-box;
}
.big-div{
  width: 100%;
  position: relative;
  top: -55px;
  display: flex;
  /* overflow: hidden; */
}
.big-div image{
  width: 100%;
  position: absolute;
  top: 0px;
}
.swiper-div{
  padding: 60px 0 0;
  position: relative;
  z-index: 98;
}
swiper {
  /* padding-top: 30px; */
  padding-bottom: 20px;
  position: relative;
  z-index: 99;
}
.text image{ 
  padding: 20px;
  width: 100vw;
  box-sizing: border-box;
}
.le-img {
  width: 100%;
  display: block;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border-radius: 6px;
}
.le-img.le-active {
  transform: scale(1);
}